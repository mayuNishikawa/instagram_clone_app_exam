<article>
  <% @pictures.each do |picture| %>
    <div class="post">
      <div class="profileFlex">
        <p><%= image_tag picture.user.image.url %></p>
        <p><%= picture.user.name %></p>
      </div>
      <p><%= image_tag picture.image.url %></p>
      <p><%= picture.content %></p>

      <div class="menuFlex">
          <p><%= link_to 'Show', picture %></p>
        <% if picture.user_id == current_user.id %>
          <p><%= link_to 'edit', edit_picture_path(picture) %></p>
          <p><%= link_to 'Destroy', picture, method: :delete, data: { confirm: 'Are you sure?' } %></p>
        <% end %>
        <% unless picture.user_id == current_user.id %>
          <% if picture.favorites.present? %>
            <p><%= link_to 'unlike', favorite_path(id: @favorite.id), method: :delete %></p>
          <% else %>
            <p><%= link_to 'like', favorites_path(picture_id: picture.id), method: :post %></p>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
</article>