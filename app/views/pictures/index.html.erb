<article>
  <% @pictures.each do |picture| %>
    <div class="post">
      <div class="profileFlex">
        <p><%= link_to image_tag(picture.user.image.url) if picture.user.image.present?, user_path(picture.user.id) %></p>
        <p><%= picture.user.name %></p>
      </div>
      <p><%= image_tag picture.image.url if picture.image.present? %></p>
      <p><%= picture.content %></p>

      <div class="menuFlex">
          <p><%= link_to 'Show', picture %></p>
      </div>
    </div>
  <% end %>
</article>