<p>
  <%= @picture.user.name %>
</p>

<p>
  <%= image_tag @picture.image.url if @picture.image.present? %>
</p>

<p>
  <%= @picture.content %>
</p>

<% unless @picture.user_id == current_user.id %>
  <% if @favorite.present? %>
    <%= link_to 'unlike', favorite_path(id: @favorite.id), method: :delete %>
  <% else %>
    <%= link_to 'like', favorites_path(picture_id: @picture.id), method: :post %>
  <% end %>
<% end %>

<% if @picture.user_id == current_user.id %>
  <p><%= link_to 'edit', edit_picture_path(@picture) %></p>
  <p><%= link_to 'Destroy', @picture, method: :delete, data: { confirm: 'Are you sure?' } %></p>
<% end %>
<%= link_to 'Back', pictures_path %>
